                        	.st0{fill-rule:evenodd;clip-rule:evenodd;fill:#FFFFFF;}
                        	.st1{fill-rule:evenodd;clip-rule:evenodd;fill:#0066FF;}
                        	.st2{fill:#FFFFFF;}
                        	.st3{fill:#0066FF;}
                        </style>
